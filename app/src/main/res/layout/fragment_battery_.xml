    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/line"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="536dp"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/sound_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:thumb="@drawable/off_switch"
        android:track="@drawable/on_switch"
        android:layout_marginLeft="298dp"
        android:layout_marginTop="459dp"/>


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/vibration_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:thumb="@drawable/off_switch"
        android:track="@drawable/on_switch"
        android:layout_marginLeft="298dp"
        android:layout_marginTop="505dp"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/flashlight_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:thumb="@drawable/off_switch"
        android:track="@drawable/on_switch"
        android:layout_marginLeft="298dp"
        android:layout_marginTop="550dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sound Options"
        android:textColor="#7077E0"
        android:textStyle="bold"
        android:textSize="13sp"
        android:layout_marginTop="610dp"
        android:layout_marginLeft="15dp"/>

    <ImageView
        android:id="@+id/select_sound_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/red_box_charger_mode"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="638dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sound"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="663dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/select_sound"
        android:layout_marginLeft="325dp"
        android:layout_marginTop="663dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Sound"
        android:textColor="#FFFCF6"
        android:textSize="12sp"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="663dp"/>

</RelativeLayout>
